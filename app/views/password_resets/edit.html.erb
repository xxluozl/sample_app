<%= content_for :title, '修改密码' %>

<h1>修改密码</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'shared/error_messages' %>
    <%= form_with(model: @user, url: password_reset_path(params[:id]), local: true) do |f| %>
      <%= hidden_field_tag :email, @user.email %>
      <%= f.password_field :password, class: 'form-control', placeholder: '新密码（6个以上字符组成，区分大小写）' %>
      <%= f.password_field :password_confirmation, class: 'form-control', placeholder: '确认密码' %>
      <%= f.submit "提交", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
