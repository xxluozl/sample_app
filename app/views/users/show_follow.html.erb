<%= content_for(:title, @title) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <div>
        <%= gravatar_for(@user) %>
        <p id="name"><%= @user.name %></p>
        <%= render 'shared/stats' %>
      </div>
      <p id="signature"><%= @user.signature %></p>
    </section>
    <section class="stats" style="width: 90%; height: auto">
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, size: 30), user_path(user) %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @pagy_users.any? %>
      <ul class="users follow">
        <%= render @pagy_users %>
      </ul>
      <%== pagy_bootstrap_nav(@pagy) %>
    <% end %>
  </div>
</div>
