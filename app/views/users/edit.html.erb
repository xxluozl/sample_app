<%= content_for :title, "修改资料" %>

<h1>修改资料</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name, '昵称' %>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.label :signature, '个性签名' %>
      <%= f.text_field :signature, class: 'form-control', placeholder: '介绍一下自己吧！' %>
      <%= f.label :email, '邮件' %>
      <%= f.email_field :email, class: 'form-control' %>
      <%#= f.label :password, '密码' %>
      <%#= f.password_field :password, class: 'form-control' %>
      <%#= f.label :password_confirmation, "确认密码" %>
      <%#= f.password_field :password_confirmation, class: 'form-control' %>
      <%= f.submit "保存", class: "btn btn-primary" %>
    <% end %>

    <div class="gravatar_edit">
      <%= gravatar_for(@user) %>
      <a href="https://gravatar.com/emails" rel="noopener" target="_blank">更换</a>
    </div>
  </div>
</div>