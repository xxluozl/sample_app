<%= content_for :title, '注册' %>

<h1>注册</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'shared/error_messages' %>
    <%= form_with(model: @user, local: true) do |f| %>
      <%= f.text_field :name, class: 'form-control', placeholder: '昵称' %>
      <%= f.email_field :email, class: 'form-control', placeholder: '邮件地址' %>
      <%= f.password_field :password, class: 'form-control', placeholder: '密码（6个以上字符组成，区分大小写）' %>
      <%= f.password_field :password_confirmation, class: 'form-control', placeholder: '确认密码' %>
      <%= f.submit "注册", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
