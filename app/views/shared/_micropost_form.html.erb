<%= form_with(model: @micropost, local: true) do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "有什么新鲜事想分享给大家？", maxlength: 140%>
  </div>
  <%= image_tag "img-upload", alt: "imgUpload", id: "img-upload", width: 22, height: "auto" %>
  <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png", class: "file-input", style: "display:none" %>
  <%= image_tag "video-upload", alt: "videoUpload", id: "video-upload", width: 22, height: "auto", style: "margin-left:20px" %>
  <%= f.submit "发布", class: "btn btn-primary", disabled: true, style: "margin-top:20px" %>
<% end %>